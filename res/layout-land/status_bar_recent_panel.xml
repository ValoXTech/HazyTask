<com.android.systemui.recent.RecentsPanelView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/recents_root"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:foreground="@drawable/bg_protect"
    systemui:recentItemLayout="@layout/status_bar_recent_item"
    >
    <FrameLayout
        android:id="@+id/recents_bg_protect"
        android:background="@drawable/status_bar_recents_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:fitsSystemWindows="true">

        <com.android.systemui.recent.RecentsVertcalScrollView
            android:id="@+id/recents_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	    android:layout_marginEnd="0dp"
            android:divider="@null"
            android:fadingEdge="vertical"
            android:scrollbars="none"
            android:fadingEdgeLength="@dimen/status_bar_recents_scroll_fading_edge_length"
	    android:layout_gravity="top|center"
            android:clipToPadding="false"
            android:clipChildren="false">

            <GridLayout android:id="@+id/recents_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
		android:columnCount="3"
		android:layout_gravity="top|center"
                android:fitsSystemWindows="true"
                android:clipToPadding="false"
                android:clipChildren="false">
            </GridLayout>

        </com.android.systemui.recent.RecentsVertcalScrollView>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@drawable/status_bar_recents_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recents_clear"
                android:background="@drawable/status_bar_recents_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_recents_clear_all"
                android:textAppearance="@style/RecentsNoApps"
                android:text="@string/recents_panel_clear_all"
                android:layout_weight="1"
                style="?android:attr/buttonStyle"
				/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider_vertical_holo_dark"
                android:layout_width="1dp"
                android:layout_height="48dp"
                />
            <ImageView
                android:id="@+id/recents_hazycenter"
                android:background="@drawable/status_bar_recents_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_recents_hazycenter"
                android:textAppearance="@style/RecentsNoApps"
                android:text="@string/recents_panel_hazycenter"
                android:layout_weight="1"
                style="?android:attr/buttonStyle"
                />

		</LinearLayout>

        <ImageView
            android:id="@+id/recents_no_app_icon"
            android:clickable="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
	        android:src="@drawable/ic_recents_no_app"
            android:visibility="invisible" />
    </FrameLayout>

    <include
        layout="@layout/status_bar_no_recent_apps"
        android:id="@+id/recents_no_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</com.android.systemui.recent.RecentsPanelView>
